# Infra Platform Configuration

# Application
APP_NAME=Infra
APP_VERSION=1.0.0
APP_ENV=development

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Security
SECRET_KEY=change_this_to_a_secure_random_key_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
CORS_ORIGINS=*

# Blockchain
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_NETWORK=ethereum
BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
BLOCKCHAIN_CHAIN_ID=1

# Audit & Compliance
AUDIT_LEVEL=FULL
AUDIT_RETENTION_DAYS=2555  # 7 years (HIPAA requirement)
BLOCKCHAIN_ANCHOR_CRITICAL=true

# Database
DATABASE_URL=postgresql://infra:password@localhost:5432/infra_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=300

# Post-Quantum Cryptography
PQC_ENABLED=true
PQC_KEY_EXCHANGE=CRYSTALS-KYBER
PQC_SIGNATURE=CRYSTALS-DILITHIUM

# Monitoring
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO

# Rights Framework
ENFORCE_ALL_RIGHTS=true
AUTO_ESCALATE_VIOLATIONS=true
DEFAULT_CONSENT_DURATION_DAYS=365

# Device Management
REQUIRE_DEVICE_CERTIFICATION=true
ALLOW_EXPERIMENTAL_DEVICES=false
AUTO_QUARANTINE_ANOMALIES=true

# Session Management
MAX_SESSION_DURATION_SECONDS=7200
MIN_REST_PERIOD_SECONDS=3600
MAX_COGNITIVE_LOAD=0.85
MAX_ENTROPY_LEVEL=0.90

# Smart City Integration
SMART_CITY_MODE=enabled
PUBLIC_NOTIFICATION=true
ANTI_GREED_POLICY=enabled
MAX_PROFIT_MARGIN=0.20
